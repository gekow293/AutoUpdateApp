<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <StackPanel VerticalAlignment="Bottom">
            <ProgressBar x:Name="progress_download" BorderBrush="Transparent" Height="20" Minimum="0" Maximum="100" Background="Transparent" ></ProgressBar>
            
            <TextBlock x:Name="version" VerticalAlignment="Center" Height="40" TextAlignment="Center" FontSize="22" FontWeight="DemiBold"/>

            <TextBlock x:Name="label_status" VerticalAlignment="Center" Height="auto" TextWrapping="WrapWithOverflow" TextAlignment="Center" FontSize="14" FontWeight="DemiBold"/>
        </StackPanel>

        
    </Grid>
</Window>
